#include <iostream>

using namespace std;

int dp[101] = { 0 };
int n, m;
int result[101] = { 0 };

int main() {
	cin >> n;

	for (int i = 0; i < n; i++) {
		cin >> m;
		dp[i] = m;
	}

	for (int i = 0; i < n; i++) {
		result[i] = max((dp[i] + dp[i + 2]), (dp[i + 1] + dp[i + 3]));
	}

	cout << *max_element(result, result + 101);
}
